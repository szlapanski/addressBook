{% extends 'base.html.twig' %}

{% block body %}
    <h1>Person</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ person.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ person.name }}</td>
            </tr>
            <tr>
                <th>Surname</th>
                <td>{{ person.surname }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ person.description }}</td>
            </tr>
        </tbody>
    </table>


    <table style="width:100%">
        <tr>
            <td>
                {%  include 'AddressbookBundle:email:index.html.twig' with {"person": person} %}
            </td>
            <td>
                {%  include 'AddressbookBundle:phone:index.html.twig' with {"person": person} %}
            </td>
            <td>
                {%  include 'AddressbookBundle:address:index.html.twig' with {"person": person} %}
            </td>
        </tr>
    </table>

    <ul>
        <li>
            <a href="{{ path('_edit', { 'id': person.id }) }}">Edit</a>
        </li>
        <li>
            <a href="{{ path('_index') }}">Back to the list</a>
        </li>
    </ul>
{% endblock %}
