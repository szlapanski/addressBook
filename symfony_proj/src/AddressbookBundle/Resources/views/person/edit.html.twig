{% extends 'base.html.twig' %}

{% block body %}
    <h1>Person edit</h1>

    {{ form_start(edit_form) }}
        {{ form_widget(edit_form) }}
        <input type="submit" value="Edit" />
    {{ form_end(edit_form) }}

    <ul>

        {{ dump(person) }}

        {%  include 'AddressbookBundle:email:index.html.twig' with {"person": person} %}

        <li>
            <a href="{{ path('email_new' , {"p_id" : person.id}) }}">Add a new address</a>
        </li>

        <li>
            <a href="{{ path('_index') }}">Back to the list</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
